{
    "name": "starter-blog",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "start": "next dev -p 3001",
        "dev": "INIT_CWD=$PWD next dev",
        "build": "INIT_CWD=$PWD next build && cross-env NODE_OPTIONS='--experimental-json-modules' node -r esbuild-register ./scripts/postbuild.mjs",
        "serve": "next start",
        "analyze": "cross-env ANALYZE=true next build",
        "lint": "next lint --fix --dir pages --dir components --dir lib --dir layouts --dir scripts",
        "production": "next build && pm2 startOrRestart ecosystem.config.js"
    },
    "dependencies": {
        "@algolia/client-search": "^4.14.3",
        "@next/bundle-analyzer": "13.0.2",
        "@next/font": "13.0.2",
        "@tailwindcss/forms": "^0.5.3",
        "@tailwindcss/typography": "^0.5.8",
        "autoprefixer": "^10.4.13",
        "contentlayer": "0.2.8",
        "esbuild": "0.14.38",
        "github-slugger": "^1.5.0",
        "gray-matter": "^4.0.3",
        "image-size": "1.0.0",
        "mdx-bundler": "^9.0.1",
        "next": "13.0.2",
        "next-contentlayer": "0.2.8",
        "next-themes": "^0.2.1",
        "pliny": "0.0.9",
        "postcss": "^8.4.20",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "react-icons": "^4.7.1",
        "reading-time": "1.5.0",
        "rehype-autolink-headings": "^6.1.1",
        "rehype-citation": "^0.4.0",
        "rehype-katex": "^6.0.2",
        "rehype-preset-minify": "6.0.0",
        "rehype-prism-plus": "^1.5.0",
        "rehype-slug": "^5.1.0",
        "remark": "^14.0.2",
        "remark-gfm": "^3.0.1",
        "remark-math": "^5.1.1",
        "sharp": "^0.31.2",
        "tailwindcss": "^3.2.4",
        "unist-util-visit": "^4.1.1",
        "webpack": "^5.75.0"
    },
    "devDependencies": {
        "@svgr/webpack": "^6.5.1",
        "@types/react": "^18.0.26",
        "@typescript-eslint/eslint-plugin": "^5.47.0",
        "@typescript-eslint/parser": "^5.47.0",
        "cross-env": "^7.0.3",
        "dedent": "^0.7.0",
        "esbuild-register": "3.3.3",
        "eslint": "^8.30.0",
        "eslint-config-next": "13.0.2",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "file-loader": "^6.2.0",
        "globby": "11.0.3",
        "husky": "^8.0.2",
        "js-yaml": "4.1.0",
        "lint-staged": "^13.1.0",
        "prettier": "^2.8.1",
        "prettier-plugin-tailwindcss": "^0.1.13",
        "typescript": "^4.9.4"
    },
    "lint-staged": {
        "*.+(js|jsx|ts|tsx)": [
            "eslint --fix"
        ],
        "*.+(js|jsx|ts|tsx|json|css|md|mdx)": [
            "prettier --write"
        ]
    }
}
